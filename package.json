{
    "name": "anso",
    "version": "0.2.0",
    "description": "The tiniest, fastest, dynamic CLI color library for Node.js.",
    "type": "module",
    "private": false,
    "author": "ganemedelabs",
    "license": "MIT",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "browser": {
                "types": "./dist/index.browser.d.ts",
                "default": "./dist/index.browser.js"
            },
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "typesVersions": {
        "*": {
            "index.d.ts": [
                "dist/index.d.ts"
            ],
            "index.browser.d.ts": [
                "index.browser.d.ts"
            ]
        }
    },
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/ganemedelabs/anso.git"
    },
    "bugs": {
        "url": "https://github.com/ganemedelabs/anso/issues"
    },
    "homepage": "https://github.com/ganemedelabs/anso#readme",
    "scripts": {
        "build": "tsc --emitDeclarationOnly && esbuild src/index.ts --bundle --minify --outfile=dist/index.js --format=esm && esbuild src/index.ts --bundle --minify --outfile=dist/index.cjs --format=cjs && esbuild src/index.browser.ts --bundle --minify --outfile=dist/index.browser.js --format=esm",
        "test": "jest",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write \"./**/*.{js,ts,json}\""
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "package.json"
    ],
    "keywords": [
        "ansi",
        "terminal",
        "colors",
        "cli",
        "console",
        "hex"
    ],
    "devDependencies": {
        "@eslint/compat": "^1.4.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.37.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.6.2",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "esbuild": "^0.25.12",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.2.0",
        "jiti": "^2.6.1",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
